<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingList"
    xmlns:views="clr-namespace:ShoppingList.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Shopping list"
            ContentTemplate="{DataTemplate views:ShoppingListPage}"
            Route="ShoppingListPage" />

        <ShellContent
            Title="Recipes"
            ContentTemplate="{DataTemplate views:RecipesPage}"
            Route="RecipesPage" />
    </TabBar>
</Shell>
